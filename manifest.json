{
    "manifest_version": 3,
    "name": "Focus Timer",
    "description": "Tracks how long you've been able to focus on a single webpage (or set of approved webpages)",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "timer_popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab"
    ]
}